@model SGRC_Integrador.Models.Tratamiento
@{
    Layout = null;
    var kpis = ViewBag.KPIs as List<SGRC_Integrador.Models.TratamientoKPI>;
    var bitacora = ViewBag.Bitacora as List<SGRC_Integrador.Models.TratamientoBitacora>;
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            font-size: 12px;
            color: #333;
        }

        .header {
            text-align: center;
            border-bottom: 2px solid #0b1e3b;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

        .section-title {
            background: #0b1e3b;
            color: white;
            padding: 5px 10px;
            font-weight: bold;
            margin-top: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 10px;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        .badge {
            padding: 3px 8px;
            border-radius: 10px;
            font-size: 10px;
            font-weight: bold;
        }

        .danger {
            color: #d9534f;
        }

        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 10px;
            color: #777;
        }

        .signature-box {
            margin-top: 40px;
            border-top: 1px solid #000;
            width: 200px;
            text-align: center;
            display: inline-block;
        }
    </style>
</head>
<body>
    <div class="header">
        <h2>SISTEMA DE GESTIÓN DE RIESGOS Y CUMPLIMIENTO (SGRC)</h2>
        <h3>INFORME DE AUDITORÍA: PLAN DE TRATAMIENTO DE RIESGOS</h3>
    </div>

    <div class="section-title">1. DATOS DEL RIESGO INHERENTE</div>
    <table>
        <tr>
            <th>ID Riesgo:</th>
            <td>#@Model.Riesgo.IdRiesgo</td>
            <th>Activo:</th>
            <td>@Model.Riesgo.Activo.Nombre</td>
        </tr>
        <tr>
            <th>Amenaza:</th>
            <td colspan="3">@Model.Riesgo.Amenaza</td>
        </tr>
        <tr>
            <th>Criticidad:</th>
            <td><span class="danger">Nivel @Model.Riesgo.NivelRiesgo</span></td>
            <th>Estrategia:</th>
            <td>@Model.Estrategia</td>
        </tr>
    </table>

    <div class="section-title">2. PLAN DE ACCIÓN Y CONTROLES (ISO 27002)</div>
    <p><strong>Control Aplicado:</strong> @(Model.ControlISO ?? "N/A")</p>
    <p><strong>Descripción Técnica:</strong> @Model.AccionCorrectiva</p>

    <div class="section-title">3. INDICADORES DE GESTIÓN (KPIs)</div>
    <table>
        <thead>
            <tr>
                <th>KPI</th>
                <th>Meta Esperada</th>
                <th>Frecuencia</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var k in kpis)
            {
                <tr>
                    <td>@k.NombreKPI</td>
                    <td>@k.MetaEsperada</td>
                    <td>@k.FrecuenciaMedicion</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="section-title">4. BITÁCORA DE CUMPLIMIENTO (EVIDENCIA TÉCNICA)</div>
    <table>
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Responsable</th>
                <th>Actividad Realizada</th>
                <th>KPI Impactado </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in bitacora)
            {
                <tr>
                    <td>@b.FechaRegistro.Value.ToShortDateString()</td>
                    <td>@b.UsuarioResponsable</td>
                    <td>@b.DescripcionActividad</td>
                    <td>@b.IdKPI</td>
                </tr>
            }
        </tbody>
    </table>

    @if (Model.Estrategia == "Aceptar")
    {
        <div style="margin-top: 20px; border: 1px solid red; padding: 10px;">
            <strong>NOTA ÉTICA LOPDP:</strong> Este riesgo ha sido aceptado bajo responsabilidad gerencial, reconociendo las implicaciones del Art. 42 de la Ley Orgánica de Protección de Datos Personales.
        </div>
    }

    <div style="text-align: center; margin-top: 60px;">
        <div class="signature-box">Responsable del Plan<br>@Model.Responsable</div>
        <div style="display: inline-block; width: 100px;"></div>
        <div class="signature-box">Oficial de Seguridad (CISO)</div>
    </div>

    <div class="footer">
        Documento generado automáticamente por el sistema SGRC Integrador - Fecha: @DateTime.Now.ToString()
    </div>
</body>
</html>