@model SGRC_Integrador.Models.Activo
@{ Layout = null; }

<div class="container py-4 fade-in">
    <div class="d-flex align-items-center mb-4">
        <button onclick="loadView('@Url.Action("Index")')" style="border-color: transparent; background: transparent; width: 45px; height: 45px;">
            <i class="fas fa-arrow-left"></i>
        </button>
        <div>
            <h2 class="fw-bold mb-0 text-navy">Registrar Nuevo Activo</h2>
            <p class="text-muted mb-0">Identifique y valore los activos según el estándar ISO 27005</p>
        </div>
    </div>

    <form id="formActivo" action="@Url.Action("Create", "Activos")" method="post">
        <div class="row g-4">
            <div class="col-lg-7">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-white">
                    <h5 class="fw-bold mb-4 text-navy border-bottom pb-2">
                        <i class="fas fa-info-circle me-2 text-primary"></i>Información General
                    </h5>

                    <div class="mb-3">
                        <label class="form-label fw-bold small text-muted">Nombre del Activo</label>
                        <input type="text" name="Nombre" class="form-control form-control-lg rounded-3 fs-6" required placeholder="Ej: Servidor de Producción SAP">
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted text-uppercase">Tipo de Activo (Magerit)</label>
                            <select name="Tipo" class="form-select rounded-3 shadow-sm border-light" required>
                                <option value="" disabled selected>Seleccione categoría...</option>

                                <optgroup label="Infraestructura y Tecnología">
                                    <option value="HW">[HW] Equipamiento Informático (Hardware)</option>
                                    <option value="SW">[SW] Software / Aplicaciones</option>
                                    <option value="S">[S] Servicios (Hosting, Conectividad)</option>
                                </optgroup>

                                <optgroup label="Información y Activos No Técnicos">
                                    <option value="D">[D] Datos / Información (Bases de Datos)</option>
                                    <option value="L">[L] Instalaciones (Datacenters, Agencias)</option>
                                    <option value="P">[P] Personal (Administradores, Técnicos)</option>
                                </optgroup>
                            </select>
                            <small class="text-muted" style="font-size: 0.7rem;">Basado en el Catálogo de Activos Magerit v3.0</small>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold small text-muted">Ubicación Física/Lógica</label>
                            <input type="text" name="Ubicacion" class="form-control rounded-3" placeholder="Ej: AWS Virginia / Rack 2">
                        </div>
                    </div>

                    <div class="mb-0">
                        <label class="form-label fw-bold small text-muted">Descripción y Función</label>
                        <textarea name="Descripcion" class="form-control rounded-3" rows="4" placeholder="Breve descripción del propósito del activo..."></textarea>
                    </div>
                </div>
            </div>

            <div class="col-lg-5">
                <div class="card border-0 shadow-sm rounded-4 p-4 h-100 bg-navy text-white">
                    <h5 class="fw-bold mb-4 border-bottom border-white border-opacity-25 pb-2">
                        <i class="fas fa-shield-alt me-2 text-warning"></i>Valoración de Seguridad
                    </h5>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="small fw-bold"><i class="fas fa-lock me-2 text-warning"></i>Confidencialidad</span>
                            <span class="badge bg-white text-navy" id="valC">1</span>
                        </div>
                        <input type="range" name="ValorC" id="slideC" class="form-range custom-range" min="1" max="4" value="1" oninput="updateSlider('slideC', 'valC')">
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="small fw-bold"><i class="fas fa-check-circle me-2 text-info"></i>Integridad</span>
                            <span class="badge bg-white text-navy" id="valI">1</span>
                        </div>
                        <input type="range" name="ValorI" id="slideI" class="form-range custom-range" min="1" max="4" value="1" oninput="updateSlider('slideI', 'valI')">
                    </div>

                    <div class="mb-5">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="small fw-bold"><i class="fas fa-bolt me-2 text-warning"></i>Disponibilidad</span>
                            <span class="badge bg-white text-navy" id="valD">1</span>
                        </div>
                        <input type="range" name="ValorD" id="slideD" class="form-range custom-range" min="1" max="4" value="1" oninput="updateSlider('slideD', 'valD')">
                    </div>

                    <div class="bg-white bg-opacity-10 p-4 rounded-4 text-center">
                        <span class="d-block small opacity-75 mb-1">Nivel de Criticidad Total</span>
                        <h1 class="display-4 fw-bold mb-0" id="txtTotal">3</h1>
                        <div class="mt-2 fw-bold" id="badgeNivel">Activo Bajo</div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-3 mt-4">
            <button type="button" class="btn btn-light rounded-pill px-4 fw-bold" onclick="loadView('@Url.Action("Index")')">Cancelar</button>
            <button type="submit" class="btn btn-navy rounded-pill px-5 fw-bold shadow-lg">
                <i class="fas fa-save me-2"></i>Guardar Activo
            </button>
        </div>
    </form>
</div>