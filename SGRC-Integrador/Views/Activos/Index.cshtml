@model IEnumerable<SGRC_Integrador.Models.Activo>

<div class="fade-in container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0 text-navy">Inventario de Activos</h2>
            <p class="text-muted">Gestión de activos de información y físicos bajo estándar Magerit.</p>
        </div>
        <div class="d-flex gap-2">
            <button class="btn btn-navy rounded-pill px-4" onclick="loadView('@Url.Action("Create", "Activos")')">
                <i class="fas fa-plus me-2"></i> Nuevo Activo
            </button>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body p-3">
            <div class="row g-3 align-items-center">
                <div class="col-md-4">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-end-0 text-muted">
                            <i class="fas fa-search"></i>
                        </span>
                        <input type="text" id="txtBuscar" class="form-control border-start-0 ps-0" placeholder="Buscar por nombre o ID...">
                    </div>
                </div>
                <div class="col-md-3">
                    <select id="filtroTipo" class="form-select border-light bg-light rounded-3">
                        <option value="">Todas las Clasificaciones</option>
                        <option value="[HW]">Hardware [HW]</option>
                        <option value="[SW]">Software [SW]</option>
                        <option value="[D]">Datos [D]</option>
                        <option value="[S]">Servicios [S]</option>
                        <option value="[L]">Instalaciones [L]</option>
                        <option value="[P]">Personal [P]</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <select id="filtroCriticidad" class="form-select border-light bg-light rounded-3">
                        <option value="todos">Todos los Niveles</option>
                        <option value="critico">Solo Críticos (10-12)</option>
                        <option value="alto">Nivel Alto (7-9)</option>
                        <option value="bajo">Nivel Bajo (1-6)</option>
                    </select>
                </div>
                <div class="col-md-2 text-end">
                    <button class="btn btn-light text-navy fw-bold w-100 rounded-3" onclick="resetFiltros()">
                        <i class="fas fa-undo me-1"></i> Limpiar
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0" id="tablaActivos">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Activo</th>
                        <th>Clasificación</th>
                        <th class="text-center">Criticidad (C+I+D)</th>
                        <th class="text-end pe-4">Acciones Técnicas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string claseBadge = "";
                        string nombreMagerit = "";
                        string nivelEtiqueta = item.ValorTotal >= 10 ? "critico" : (item.ValorTotal >= 7 ? "alto" : "bajo");

                        switch (item.Tipo)
                        {
                            case "HW": claseBadge = "badge-hw"; nombreMagerit = "[HW] Hardware"; break;
                            case "SW": claseBadge = "badge-sw"; nombreMagerit = "[SW] Software"; break;
                            case "D": claseBadge = "badge-datos"; nombreMagerit = "[D] Datos"; break;
                            case "S": claseBadge = "badge-serv"; nombreMagerit = "[S] Servicios"; break;
                            case "L": claseBadge = "badge-inst"; nombreMagerit = "[L] Instalaciones"; break;
                            case "P": claseBadge = "badge-pers"; nombreMagerit = "[P] Personal"; break;
                            default: claseBadge = "bg-light text-muted border"; nombreMagerit = item.Tipo; break;
                        }

                        <tr class="activo-row" data-tipo="@nombreMagerit" data-nivel="@nivelEtiqueta">
                            <td class="ps-4">
                                <span class="d-block fw-bold text-navy activo-nombre">@item.Nombre</span>
                                <small class="text-muted activo-id">ID: #@item.IdActivo</small>
                            </td>
                            <td>
                                <span class="badge-custom @claseBadge">@nombreMagerit</span>
                            </td>
                            <td class="text-center">
                                <div class="d-inline-flex align-items-center justify-content-center border rounded-pill px-3 py-1 @(item.ValorTotal >= 10 ? "border-danger text-danger bg-danger bg-opacity-10" : "bg-light")">
                                    <span class="fw-bold me-1">@item.ValorTotal</span>
                                    <small class="opacity-50">/ 12</small>
                                    @if (item.ValorTotal >= 10)
                                    {<i class="fas fa-fire-alt ms-2 animate-pulse" title="Activo Crítico"></i>}
                                </div>
                            </td>
                            <td class="text-end pe-4">
                                <div class="btn-group shadow-sm rounded-pill bg-white border p-1">
                                    <button class="btn btn-link text-navy p-2" title="Detalles" onclick="loadView('@Url.Action("Details", "Activos", new { id = item.IdActivo })')"><i class="fas fa-eye"></i></button>
                                    <button class="btn btn-link text-primary p-2" title="Editar" onclick="loadView('@Url.Action("Edit", "Activos", new { id = item.IdActivo })')"><i class="fas fa-edit"></i></button>
                                    <button class="btn btn-link text-danger p-2" title="Analizar Riesgo" onclick="loadView('@Url.Action("Create", "Riesgos", new { activoId = item.IdActivo })')"><i class="fas fa-biohazard"></i></button>
                                    <button class="btn btn-link text-danger" title="Eliminar"
                                            onclick="confirmarEliminar(@item.IdActivo, '@item.Nombre')">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div id="noResultados" class="text-center py-5 d-none">
                <i class="fas fa-search fa-3x text-light mb-3"></i>
                <h5 class="text-muted">No se encontraron activos con los filtros aplicados.</h5>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminarActivo" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-danger text-white rounded-top-4 border-0">
                <h5 class="modal-title fw-bold"><i class="fas fa-exclamation-triangle me-2"></i>Confirmar Eliminación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="alert alert-warning border-0 small mb-4">
                    <i class="fas fa-info-circle me-2"></i> <strong>Atención:</strong> Esta acción es irreversible. Se eliminarán también todos los análisis de riesgos vinculados a este activo.
                </div>
                <p class="text-center mb-4">Confirme la eliminación del activo: <br><strong id="nombreActivoEliminar" class="text-navy fs-5"></strong></p>

                <div class="mb-3">
                    <label class="form-label small fw-bold text-muted text-uppercase">Contraseña del Auditor</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="fas fa-lock"></i></span>
                        <input type="password" id="passAuditor" class="form-control border-light bg-light" placeholder="Ingrese su contraseña para autorizar">
                    </div>
                </div>
                <input type="hidden" id="idActivoEliminar" />
            </div>
            <div class="modal-footer border-0 p-3">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger rounded-pill px-4 shadow-sm" onclick="ejecutarEliminacion()">Confirmar y Borrar</button>
            </div>
        </div>
    </div>
</div>

<script>
    // 1. Función que abre el modal y prepara los datos
    function confirmarEliminar(id, nombre) {
        $('#idActivoEliminar').val(id);
        $('#nombreActivoEliminar').text(nombre);
        $('#passAuditor').val(''); // Limpiar campo
        var modal = new bootstrap.Modal(document.getElementById('modalEliminarActivo'));
        modal.show();
    }

    // 2. Función que ejecuta el AJAX al controlador
    function ejecutarEliminacion() {
        const id = $('#idActivoEliminar').val();
        const pass = $('#passAuditor').val();

        if (!pass) {
            alert("Debe ingresar su contraseña para autorizar la eliminación.");
            return;
        }

        $.ajax({
            url: '@Url.Action("DeleteConfirmed", "Activos")',
            type: 'POST',
            data: { id: id, password: pass },
            success: function (res) {
                if (res.success) {
                    // Cerrar modal
                    bootstrap.Modal.getInstance(document.getElementById('modalEliminarActivo')).hide();
                    // Recargar la tabla
                    loadView('@Url.Action("Index", "Activos")');
                } else {
                    alert(res.message);
                }
            },
            error: function () {
                alert("Error de comunicación con el servidor.");
            }
        });
    }
</script>

<style>
    .text-navy {
        color: #0b1e3b;
    }

    .btn-navy {
        background-color: #0b1e3b;
        color: white;
        border: none;
    }

        .btn-navy:hover {
            background-color: #d62828;
            color: white;
        }

    .btn-outline-navy {
        color: #0b1e3b;
        border: 2px solid #0b1e3b;
    }

        .btn-outline-navy:hover {
            background-color: #0b1e3b;
            color: white;
        }

    /* Badges Magerit */
    .badge-custom {
        padding: 5px 12px;
        border-radius: 8px;
        font-size: 0.72rem;
        font-weight: 700;
        text-transform: uppercase;
        border: 1px solid transparent;
        letter-spacing: 0.3px;
    }

    .badge-hw {
        background-color: rgba(49, 130, 206, 0.1);
        color: #2b6cb0;
        border-color: rgba(49, 130, 206, 0.2);
    }

    .badge-sw {
        background-color: rgba(102, 126, 234, 0.1);
        color: #4c51bf;
        border-color: rgba(102, 126, 234, 0.2);
    }

    .badge-datos {
        background-color: rgba(72, 187, 120, 0.1);
        color: #276749;
        border-color: rgba(72, 187, 120, 0.2);
    }

    .badge-serv {
        background-color: rgba(237, 137, 54, 0.1);
        color: #9c4221;
        border-color: rgba(237, 137, 54, 0.2);
    }

    .badge-inst {
        background-color: rgba(11, 30, 59, 0.08);
        color: #0b1e3b;
        border-color: rgba(11, 30, 59, 0.15);
    }

    .badge-pers {
        background-color: rgba(159, 122, 234, 0.1);
        color: #6b46c1;
        border-color: rgba(159, 122, 234, 0.2);
    }

    .animate-pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.4;
        }

        100% {
            opacity: 1;
        }
    }

    .btn-link:hover {
        transform: scale(1.2);
        transition: 0.2s;
    }
</style>