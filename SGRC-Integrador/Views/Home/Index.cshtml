@model dynamic
@{
    if (Request.IsAjaxRequest()) { Layout = null; }
    ViewBag.Title = "Dashboard";
}

<div class="dashboard-container">
    <div class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Panel de Control SGRC</h1>
            <p class="dashboard-subtitle">Monitoreo en tiempo real de activos y riesgos bajo estándar Magerit</p>
        </div>
    </div>

    <div class="kpi-grid">
        <div class="kpi-card kpi-primary">
            <div class="kpi-icon">
                <i class="fas fa-server"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Total Activos</span>
                <h2 class="kpi-value">@ViewBag.TotalActivos</h2>
                <div class="kpi-footer">
                    <span class="kpi-trend positive">
                        <i class="fas fa-check-circle"></i> Inventario actualizado
                    </span>
                </div>
            </div>
        </div>

        <div class="kpi-card kpi-danger">
            <div class="kpi-icon">
                <i class="fas fa-fire-alt"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Activos Críticos</span>
                <h2 class="kpi-value">@ViewBag.ActivosCriticos</h2>
                <div class="kpi-footer">
                    <span class="kpi-trend negative">
                        <i class="fas fa-exclamation-triangle"></i> Requiere atención
                    </span>
                </div>
            </div>
        </div>

        <div class="kpi-card kpi-warning">
            <div class="kpi-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Riesgos Expuestos</span>
                <h2 class="kpi-value">@ViewBag.RiesgosPendientes</h2>
                <div class="kpi-footer">
                    <span class="kpi-trend warning">
                        <i class="fas fa-clock"></i> Pendientes de mitigación
                    </span>
                </div>
            </div>
        </div>

        <div class="kpi-card kpi-success">
            <div class="kpi-icon">
                <i class="fas fa-clipboard-check"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Tratamientos Activos</span>
                <h2 class="kpi-value">@ViewBag.TratamientosActivos</h2>
                <div class="kpi-footer">
                    <span class="kpi-trend positive">
                        <i class="fas fa-arrow-up"></i> 8% este mes
                    </span>
                </div>
            </div>
        </div>
    </div>

    <div class="content-grid">
        <div class="chart-card">
            <div class="card-header-modern">
                <div>
                    <h3 class="card-title-modern">Distribución por Categoría de Activo</h3>
                    <p class="card-subtitle-modern">Clasificación basada en activos identificados</p>
                </div>
                <div class="chart-filters">
                    <button class="filter-btn active">Vista General</button>
                </div>
            </div>
            <div class="chart-container" style="position: relative; height:350px; width:100%">
                <canvas id="chartActivos"></canvas>
            </div>
        </div>

        <div class="actions-card">
            <div class="card-header-modern">
                <div>
                    <h3 class="card-title-modern">Alertas de Criticidad</h3>
                    <p class="card-subtitle-modern">Amenazas con nivel (P×I) >= 12</p>
                </div>
            </div>
            <div class="critical-list">
                <div class="d-flex align-items-center p-3 mb-2 rounded-4 bg-danger bg-opacity-10 border-start border-danger border-4">
                    <div class="me-3">
                        <i class="fas fa-biohazard text-danger fs-4"></i>
                    </div>
                    <div class="flex-grow-1">
                        <span class="d-block fw-bold text-navy small">Ransomware</span>
                        <small class="text-muted">Servidor SAP ERP</small>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-danger rounded-pill">16 / 16</span>
                    </div>
                </div>

                <div class="d-flex align-items-center p-3 mb-2 rounded-4 bg-warning bg-opacity-10 border-start border-warning border-4">
                    <div class="me-3">
                        <i class="fas fa-exclamation-triangle text-warning fs-4"></i>
                    </div>
                    <div class="flex-grow-1">
                        <span class="d-block fw-bold text-navy small">Fuga de Datos</span>
                        <small class="text-muted">Base de Clientes</small>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-warning text-dark rounded-pill">9 / 16</span>
                    </div>
                </div>
            </div>
            <div class="d-grid mt-3">
                <button class="btn btn-outline-navy btn-sm rounded-pill" onclick="loadView('@Url.Action("Index", "Riesgos")')">
                    Ver Matriz Completa
                </button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('chartActivos').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Labels)),
            datasets: [{
                label: 'Activos',
                data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Valores)),
                backgroundColor: [
                    'rgba(11, 30, 59, 0.85)',
                    'rgba(76, 81, 191, 0.85)',
                    'rgba(39, 103, 73, 0.85)',
                    'rgba(156, 66, 33, 0.85)'
                ],
                borderRadius: 12,
                barThickness: 'flex', // Esto hace que las barras se ajusten al espacio disponible
                maxBarThickness: 40
            }]
        },
        options: {
            indexAxis: 'y',
            responsive: true,
            maintainAspectRatio: false, // CRÍTICO: Permite que el gráfico use todo el alto del div
            plugins: {
                legend: { display: false }
            },
            scales: {
                x: {
                    beginAtZero: true,
                    grid: { display: false },
                    ticks: { stepSize: 1 }
                },
                y: {
                    grid: { display: false },
                    ticks: {
                        font: { weight: 'bold', size: 12 }
                    }
                }
            },
            layout: {
                padding: {
                    left: 10,
                    right: 30,
                    top: 10,
                    bottom: 10
                }
            }
        }
    });
</script>   
<style>
    .critical-list {
        max-height: 280px;
        overflow-y: auto;
        padding-right: 5px;
    }

        /* Scrollbar sutil para la lista */
        .critical-list::-webkit-scrollbar {
            width: 4px;
        }

        .critical-list::-webkit-scrollbar-thumb {
            background: #e2e8f0;
            border-radius: 10px;
        }

    .bg-opacity-10 {
        background-color: rgba(0, 0, 0, 0.05); /* Fallback */
    }
</style>