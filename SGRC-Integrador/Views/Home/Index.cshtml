@model dynamic
@{
    if (Request.IsAjaxRequest()) { Layout = null; }
    ViewBag.Title = "Dashboard";
}

<div class="dashboard-container">
    <!-- Header -->
    <div class="dashboard-header">
        <div>
            <h1 class="dashboard-title">Panel de Control SGRC</h1>
            <p class="dashboard-subtitle">Monitoreo en tiempo real de activos y riesgos</p>
        </div>
        <div class="header-actions">
            <button class="btn-icon" title="Actualizar datos">
                <i class="fas fa-sync-alt"></i>
            </button>
            <button class="btn-icon" title="Exportar reporte">
                <i class="fas fa-download"></i>
            </button>
        </div>
    </div>

    <!-- KPI Cards Grid -->
    <div class="kpi-grid">
        <div class="kpi-card kpi-primary">
            <div class="kpi-icon">
                <i class="fas fa-server"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Total Activos</span>
                <h2 class="kpi-value">@ViewBag.TotalActivos</h2>
                <div class="kpi-footer">
                    <span class="kpi-trend positive">
                        <i class="fas fa-arrow-up"></i> 12% vs mes anterior
                    </span>
                </div>
            </div>
        </div>

        <div class="kpi-card kpi-danger">
            <div class="kpi-icon">
                <i class="fas fa-exclamation-circle"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Activos Críticos</span>
                <h2 class="kpi-value">@ViewBag.ActivosCriticos</h2>
                <div class="kpi-footer">
                    <span class="kpi-trend negative">
                        <i class="fas fa-arrow-down"></i> Requiere atención
                    </span>
                </div>
            </div>
        </div>

        <div class="kpi-card kpi-warning">
            <div class="kpi-icon">
                <i class="fas fa-shield-alt"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Riesgos Expuestos</span>
                <h2 class="kpi-value">@ViewBag.RiesgosPendientes</h2>
                <div class="kpi-footer">
                    <span class="kpi-trend warning">
                        <i class="fas fa-exclamation-triangle"></i> Pendientes
                    </span>
                </div>
            </div>
        </div>

        <div class="kpi-card kpi-success">
            <div class="kpi-icon">
                <i class="fas fa-check-circle"></i>
            </div>
            <div class="kpi-content">
                <span class="kpi-label">Tratamientos Activos</span>
                <h2 class="kpi-value">24</h2>
                <div class="kpi-footer">
                    <span class="kpi-trend positive">
                        <i class="fas fa-arrow-up"></i> 8% completado
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Chart Section -->
        <div class="chart-card">
            <div class="card-header-modern">
                <div>
                    <h3 class="card-title-modern">Distribución de Activos</h3>
                    <p class="card-subtitle-modern">Por categoría</p>
                </div>
                <div class="chart-filters">
                    <button class="filter-btn active">Mes</button>
                    <button class="filter-btn">Trimestre</button>
                    <button class="filter-btn">Año</button>
                </div>
            </div>
            <div class="chart-container">
                <canvas id="chartActivos"></canvas>
            </div>
        </div>

        <!-- Activity Timeline -->
        <div class="timeline-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">Actividad Reciente</h3>
                <a href="#" class="link-view-all">Ver todo</a>
            </div>
            <div class="timeline">
                <div class="timeline-item">
                    <div class="timeline-marker timeline-marker-success"></div>
                    <div class="timeline-content">
                        <p class="timeline-title">Nuevo activo registrado</p>
                        <p class="timeline-time">Hace 2 horas</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker timeline-marker-warning"></div>
                    <div class="timeline-content">
                        <p class="timeline-title">Riesgo identificado en servidor</p>
                        <p class="timeline-time">Hace 5 horas</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker timeline-marker-info"></div>
                    <div class="timeline-content">
                        <p class="timeline-title">Tratamiento aplicado</p>
                        <p class="timeline-time">Hace 1 día</p>
                    </div>
                </div>
                <div class="timeline-item">
                    <div class="timeline-marker timeline-marker-danger"></div>
                    <div class="timeline-content">
                        <p class="timeline-title">Alerta de vulnerabilidad</p>
                        <p class="timeline-time">Hace 2 días</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="actions-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">Acciones Rápidas</h3>
            </div>
            <div class="quick-actions">
                <button class="action-btn action-btn-primary" onclick="loadView('@Url.Action("Index", "Activos")')">
                    <i class="fas fa-plus-circle"></i>
                    <span>Nuevo Activo</span>
                </button>
                <button class="action-btn action-btn-warning" onclick="loadView('@Url.Action("Index", "Riesgos")')">
                    <i class="fas fa-search"></i>
                    <span>Analizar Riesgos</span>
                </button>
                <button class="action-btn action-btn-info" onclick="loadView('@Url.Action("Index", "Tratamientos")')">
                    <i class="fas fa-clipboard-list"></i>
                    <span>Tratamientos</span>
                </button>
                <button class="action-btn action-btn-secondary" onclick="loadView('@Url.Action("Index", "Reportes")')">
                    <i class="fas fa-file-alt"></i>
                    <span>Ver Reportes</span>
                </button>
            </div>

            <div class="deadline-alert">
                <i class="fas fa-calendar-check"></i>
                <div>
                    <strong>Fecha de Entrega</strong>
                    <p>22/23 de Enero 2026</p>
                </div>
            </div>
        </div>

        <!-- Risk Distribution -->
        <div class="risk-card">
            <div class="card-header-modern">
                <h3 class="card-title-modern">Distribución de Riesgos</h3>
            </div>
            <div class="risk-distribution">
                <div class="risk-item risk-critical">
                    <div class="risk-bar" style="width: 25%"></div>
                    <div class="risk-info">
                        <span class="risk-label">Crítico</span>
                        <span class="risk-count">5</span>
                    </div>
                </div>
                <div class="risk-item risk-high">
                    <div class="risk-bar" style="width: 35%"></div>
                    <div class="risk-info">
                        <span class="risk-label">Alto</span>
                        <span class="risk-count">7</span>
                    </div>
                </div>
                <div class="risk-item risk-medium">
                    <div class="risk-bar" style="width: 45%"></div>
                    <div class="risk-info">
                        <span class="risk-label">Medio</span>
                        <span class="risk-count">9</span>
                    </div>
                </div>
                <div class="risk-item risk-low">
                    <div class="risk-bar" style="width: 60%"></div>
                    <div class="risk-info">
                        <span class="risk-label">Bajo</span>
                        <span class="risk-count">12</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Chart configuration
    var ctx = document.getElementById('chartActivos').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Labels)),
            datasets: [{
                label: 'Cantidad de Activos',
                data: @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Valores)),
                backgroundColor: [
                    'rgba(11, 30, 59, 0.8)',
                    'rgba(214, 40, 40, 0.8)',
                    'rgba(255, 193, 7, 0.8)',
                    'rgba(25, 135, 84, 0.8)'
                ],
                borderRadius: 8,
                borderWidth: 0
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    borderRadius: 8,
                    titleFont: {
                        size: 14,
                        weight: 'bold'
                    },
                    bodyFont: {
                        size: 13
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    grid: {
                        color: 'rgba(0, 0, 0, 0.05)',
                        drawBorder: false
                    },
                    ticks: {
                        font: {
                            size: 12
                        },
                        color: '#64748b'
                    }
                },
                x: {
                    grid: {
                        display: false
                    },
                    ticks: {
                        font: {
                            size: 12
                        },
                        color: '#64748b'
                    }
                }
            }
        }
    });

    // Filter buttons interaction
    document.querySelectorAll('.filter-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
            this.classList.add('active');
        });
    });
</script>