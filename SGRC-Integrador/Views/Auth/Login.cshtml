@{ Layout = null; }
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SGRC Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/Content/Auth.css">
</head>
<body>
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="floating-shape shape-3"></div>

    <div class="auth-wrapper">
        <div class="auth-card">
            <div class="auth-header">
                <div class="logo-container">
                    <img src="@Url.Content("~/Content/Images/logo.svg")" alt="logo" class="logo-bar" />
                </div>
                <h2 class="auth-title">Inicio de Sesión</h2>
                <p class="auth-subtitle">Sistema de Gestión de Riesgos Cibernéticos</p>
            </div>

            @using (Html.BeginForm())
            {
                <div class="form-group-modern">
                    <label class="form-label-modern">Correo Institucional</label>
                    <div class="input-wrapper">
                        <input type="email"
                               name="correo"
                               class="form-input-modern"
                               placeholder="tu.email@institucion.edu.ec"
                               required />
                        <i class="fa-solid fa-envelope input-icon"></i>
                    </div>
                </div>

                <div class="form-group-modern">
                    <label class="form-label-modern">Contraseña</label>
                    <div class="input-wrapper">
                        <input type="password"
                               name="password"
                               class="form-input-modern"
                               placeholder="••••••••"
                               required />
                        <i class="fa-solid fa-lock input-icon"></i>
                    </div>
                </div>

                <div class="remember-section">
                    <div class="checkbox-wrapper">
                        <input type="checkbox" id="remember" />
                        <label for="remember">Recordar sesión</label>
                    </div>
                    <a href="#" class="forgot-link">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="btn-primary-modern w-100">
                    <span class="btn-icon-text">
                        <i class="fa-solid fa-right-to-bracket"></i>
                        Iniciar Sesión
                    </span>
                </button>
            }

            @if (ViewBag.Error != null)
            {
                <p class="text-danger mt-3">@ViewBag.Error</p>
            }


            <div class="security-info">
                <div class="security-icon">
                    <i class="fa-solid fa-lock"></i>
                </div>
                <div class="security-text">
                    <strong>Conexión Segura</strong>
                    <p>Este sistema utiliza autenticación de dos factores para proteger tu información.</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>