@model IEnumerable<SGRC_Integrador.Models.Tratamiento>

@{
    Layout = null; // Muy importante para que cargue dentro del panel central
}

<div class="fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Planes de Tratamiento</h2>
            <p class="text-muted">Seguimiento de estrategias de mitigación de riesgos.</p>
        </div>
    </div>

    <div class="table-custom-container">
        <table class="table table-custom">
            <thead>
                <tr>
                    <th>Amenaza Relacionada</th>
                    <th>Estrategia</th>
                    <th>Responsable</th>
                    <th class="text-center">Progreso</th>
                    <th>Fecha Límite</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@(item.Riesgo != null ? item.Riesgo.Amenaza : "N/A")</td>
                        <td>
                            <span class="badge bg-primary">@item.Estrategia</span>
                        </td>
                        <td>@item.Responsable</td>
                        <td class="text-center">
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-success" role="progressbar"
                                     style="width: @item.Progreso%"
                                     aria-valuenow="@item.Progreso" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small class="fw-bold">@item.Progreso%</small>
                        </td>
                        <td>@(item.FechaLimite.HasValue ? item.FechaLimite.Value.ToShortDateString() : "-")</td>
                        <td>
                            <button class="btn btn-sm btn-outline-dark" onclick="loadView('@Url.Action("Details", "Tratamientos", new { id = item.IdTratamiento })')">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" onclick="loadView('@Url.Action("Delete", "Tratamientos", new { id = item.IdTratamiento })')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>