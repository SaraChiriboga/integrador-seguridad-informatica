@model IEnumerable<SGRC_Integrador.Models.Tratamiento>
@{ Layout = null; }

<div class="container-fluid py-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-navy m-0">Tablero de Control de Tratamientos</h2>
            <p class="text-muted">Seguimiento de mitigación y cumplimiento normativo ISO/LOPDP</p>
        </div>
        <button onclick="loadView('@Url.Action("Index", "Riesgos")')" class="btn btn-outline-navy rounded-pill shadow-sm">
            <i class="fas fa-plus me-2"></i>Nuevo Plan (Desde Riesgos)
        </button>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            // Validación de seguridad para evitar errores de referencia nula
            if (item.Riesgo == null) { continue; }

            <div class="col-xl-4 col-md-6">
                <div class="card h-100 border-0 shadow-sm rounded-4 overflow-hidden treatment-card">

                    <div class="p-3 @(item.Estrategia == "Mitigar" ? "bg-primary" : item.Estrategia == "Aceptar" ? "bg-danger" : "bg-warning") text-white d-flex justify-content-between align-items-center">
                        <span class="small fw-bold text-uppercase">@(item.Estrategia ?? "Sin Definir")</span>
                        <i class="fas @(item.Estrategia == "Mitigar" ? "fa-shield-alt" : "fa-exclamation-triangle")"></i>
                    </div>

                    <div class="card-body p-4">
                        <h5 class="fw-bold text-navy mb-1">@item.Riesgo.Amenaza</h5>
                        <p class="small text-muted mb-3">
                            <i class="fas fa-box me-1"></i> Activo: @(item.Riesgo.Activo != null ? item.Riesgo.Activo.Nombre : "N/A")
                        </p>

                        @if (!string.IsNullOrEmpty(item.ControlISO))
                        {
                            <div class="bg-light p-2 rounded-3 mb-3 border-start border-primary border-4">
                                <small class="d-block text-primary fw-bold">Control ISO 27002:</small>
                                <span class="small">Referencia: @item.ControlISO</span>
                            </div>
                        }

                        <div class="mb-4">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="small fw-bold">Progreso de Implementación</span>
                                <span class="small fw-bold">@(item.Progreso ?? 0)%</span>
                            </div>
                            <div class="progress" style="height: 8px;">
                                <div class="progress-bar @((item.Progreso ?? 0) >= 100 ? "bg-success" : "bg-primary")"
                                     role="progressbar"
                                     style="width: @(item.Progreso ?? 0)%"></div>
                            </div>
                        </div>

                        <div class="row text-center g-2 mb-4">
                            <div class="col-6">
                                <div class="border rounded-3 p-2 bg-white shadow-xs">
                                    <h6 class="m-0 fw-bold">@(item.FechaLimite.HasValue ? item.FechaLimite.Value.ToShortDateString() : "S/F")</h6>
                                    <small class="text-muted small">Fecha Límite</small>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="border rounded-3 p-2 bg-white shadow-xs">
                                    <h6 class="m-0 fw-bold">
                                        @(string.IsNullOrEmpty(item.Responsable) ? "Sin Asignar" : item.Responsable.Split(' ')[0])
                                    </h6>
                                    <small class="text-muted small">Responsable</small>
                                </div>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button onclick="loadView('@Url.Action("Bitacora", "Tratamientos", new { id = item.IdTratamiento })')"
                                    class="btn btn-navy py-2 rounded-4 shadow-sm">
                                <i class="fas fa-clipboard-list me-2"></i> Gestión de Bitácora
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>