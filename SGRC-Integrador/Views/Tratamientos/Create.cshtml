@model SGRC_Integrador.Models.Tratamiento
@{
    // Obtenemos el objeto de forma segura
    var riesgo = ViewBag.RiesgoInfo as SGRC_Integrador.Models.Riesgo;
}

<div class="container fade-in">
    <h3 class="fw-bold mb-4">Plan de Tratamiento</h3>

    @if (riesgo != null)
    {
        <div class="alert alert-info border-0 shadow-sm">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Activo:</strong> @(riesgo.Activo != null ? riesgo.Activo.Nombre : "No asignado") |
            <strong>Amenaza:</strong> @riesgo.Amenaza |
            <strong>Nivel:</strong> @riesgo.NivelRiesgo
        </div>
    }

    <form id="formTratamiento" action="@Url.Action("Create", "Tratamientos")" method="post">
        @* Asegúrate de que el nombre del campo coincida con tu BD (IdRiesgo) *@
        <input type="hidden" name="IdRiesgo" value="@(riesgo?.IdRiesgo)" />

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Estrategia de Mitigación</label>
                <select name="Estrategia" class="form-select" required>
                    <option value="Mitigar">Mitigar</option>
                    <option value="Transferir">Transferir</option>
                    <option value="Evitar">Evitar</option>
                    <option value="Aceptar">Aceptar</option>
                </select>
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Responsable del Plan</label>
                <input type="text" name="Responsable" class="form-control" required placeholder="Nombre del encargado" />
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Acción Correctiva Detallada</label>
            <textarea name="AccionCorrectiva" class="form-control" rows="3" required placeholder="Describa los pasos técnicos para reducir el riesgo..."></textarea>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label">Fecha Límite</label>
                <input type="date" name="FechaLimite" class="form-control" required />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label">Progreso Actual (%)</label>
                <input type="number" name="Progreso" class="form-control" min="0" max="100" value="0" />
            </div>
        </div>

        <div class="text-end">
            <button type="submit" class="btn btn-success btn-lg">
                <i class="fas fa-save me-2"></i>Guardar Plan de Acción
            </button>
        </div>
    </form>
</div>

<script>
    $('#formTratamiento').submit(function (e) {
        e.preventDefault();
        var form = $(this);
        $.post(form.attr('action'), form.serialize(), function (response) {
            // Después de guardar, regresamos a la lista de riesgos
            loadView('@Url.Action("Index", "Riesgos")');
        });
    });
</script>