@model SGRC_Integrador.Models.Riesgo
@{ Layout = null; }

<div class="container py-4 fade-in">
    <div class="mb-4">
        <button onclick="loadView('@Url.Action("Index")')" class="btn btn-link text-navy p-0 text-decoration-none fw-bold">
            <i class="fas fa-arrow-left me-2"></i> Volver a la Matriz
        </button>
    </div>

    <div class="row g-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100">
                <div class="card-header bg-navy text-white p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <span class="badge bg-danger mb-2 text-uppercase">Expediente de Riesgo</span>
                            <h3 class="fw-bold mb-0">@Model.Amenaza</h3>
                        </div>
                        <i class="fas fa-biohazard fa-3x opacity-25"></i>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <label class="small text-muted fw-bold text-uppercase">Activo Afectado</label>
                            <p class="fs-5 fw-bold text-navy mb-0">@(Model.Activo?.Nombre ?? "N/A")</p>
                            <small class="text-muted">Ubicación: @Model.Activo.Ubicacion</small>
                        </div>
                        <div class="col-md-6">
                            <label class="small text-muted fw-bold text-uppercase">Estado del Riesgo</label>
                            <div>
                                @if (Model.Tratado.GetValueOrDefault())
                                {
                                    <span class="badge bg-success rounded-pill px-3">TRATADO Y CONTROLADO</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger rounded-pill px-3">EXPUESTO / SIN CONTROL</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="p-3 bg-light rounded-4 border-start border-4 border-navy mb-4">
                        <label class="small text-navy fw-bold text-uppercase d-block mb-1">Vulnerabilidad Detectada</label>
                        <p class="mb-0 italic text-dark">
                            @(string.IsNullOrEmpty(Model.Vulnerabilidad) ? "No se ha detallado la vulnerabilidad técnica." : Model.Vulnerabilidad)
                        </p>
                    </div>

                    @if (!Model.Tratado.GetValueOrDefault())
                    {
                        <div class="alert alert-warning border-0 rounded-4 d-flex align-items-center">
                            <i class="fas fa-exclamation-circle fa-2x me-3"></i>
                            <div>
                                <h6 class="fw-bold mb-1">Acción Requerida</h6>
                                <p class="small mb-0">Este riesgo supera el apetito de riesgo aceptable. Se recomienda iniciar un Plan de Tratamiento.</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-4 text-center">
                <h5 class="fw-bold text-navy mb-4">Análisis Cualitativo</h5>

                <div class="row g-2 mb-4">
                    <div class="col-6">
                        <div class="p-3 bg-light rounded-4">
                            <small class="d-block text-muted">Probabilidad</small>
                            <span class="fs-3 fw-bold">@Model.Probabilidad</span>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="p-3 bg-light rounded-4">
                            <small class="d-block text-muted">Impacto</small>
                            <span class="fs-3 fw-bold">@Model.Impacto</span>
                        </div>
                    </div>
                </div>

                <div class="py-4 border-top border-bottom mb-4">
                    <span class="small text-muted text-uppercase d-block">Nivel de Riesgo Inherente</span>
                    <h1 class="display-2 fw-bold @(Model.NivelRiesgo >= 12 ? "text-danger" : Model.NivelRiesgo >= 8 ? "text-warning" : "text-success")">
                        @Model.NivelRiesgo
                    </h1>
                </div>

                <div class="d-grid gap-2">
                    @if (!Model.Tratado.GetValueOrDefault())
                    {
                        <button class="btn btn-navy py-3 rounded-pill fw-bold"
                                onclick="loadView('@Url.Action("Gestionar", "Tratamientos", new { idRiesgo = Model.IdRiesgo })')">
                            <i class="fas fa-hammer me-2"></i> Tratar Ahora
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-outline-success py-3 rounded-pill fw-bold"
                                onclick="loadView('@Url.Action("Index", "Tratamientos")')">
                            <i class="fas fa-shield-check me-2"></i> Ver Control Aplicado
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>