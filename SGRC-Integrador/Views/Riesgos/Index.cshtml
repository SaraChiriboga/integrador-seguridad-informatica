@model IEnumerable<SGRC_Integrador.Models.Riesgo>

<div class="fade-in container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0 text-navy">Matriz de Riesgos</h2>
            <p class="text-muted">Análisis de amenazas y niveles de exposición por activo.</p>
        </div>
        <button class="btn btn-navy rounded-pill px-4" onclick="loadView('@Url.Action("Create", "Riesgos")')">
            <i class="fas fa-plus me-2"></i> Nuevo Análisis
        </button>
    </div>

    <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Activo Asociado</th>
                        <th>Amenaza Identificada</th>
                        <th class="text-center">Prob.</th>
                        <th class="text-center">Imp.</th>
                        <th class="text-center">Nivel (P×I)</th>
                        <th class="text-center">Estado</th>
                        <th class="text-center">Acciones Técnicas</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        string textNivel = "text-success";
                        if (item.NivelRiesgo >= 12) { textNivel = "text-danger"; }
                        else if (item.NivelRiesgo >= 8) { textNivel = "text-warning"; }

                        <tr>
                            <td class="ps-4">
                                <span class="d-block fw-bold text-navy">@(item.Activo != null ? item.Activo.Nombre : "Sin Activo")</span>
                                <small class="text-muted text-uppercase" style="font-size: 0.7rem;">ID: #@item.IdRiesgo</small>
                            </td>
                            <td>
                                <span class="fw-bold">@item.Amenaza</span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border">@item.Probabilidad</span>
                            </td>
                            <td class="text-center">
                                <span class="badge bg-light text-dark border">@item.Impacto</span>
                            </td>
                            <td class="text-center">
                                <div class="d-inline-flex align-items-center justify-content-center border rounded-pill px-3 py-1 @(item.NivelRiesgo >= 12 ? "border-danger bg-danger bg-opacity-10" : "bg-light")">
                                    <span class="fw-bold @textNivel">@item.NivelRiesgo</span>
                                    @if (item.NivelRiesgo >= 12)
                                    {<i class="fas fa-bolt ms-2 text-danger animate-pulse"></i>}
                                </div>
                            </td>
                            <td class="text-center">
                                @if (item.Tratado.GetValueOrDefault())
                                {
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 rounded-pill px-3">
                                        <i class="fas fa-check-circle me-1"></i> Tratado
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 rounded-pill px-3">
                                        <i class="fas fa-exclamation-triangle me-1"></i> Expuesto
                                    </span>
                                }
                            </td>
                            <td class="text-center">
                                <div class="d-flex justify-content-center">
                                    <div class="btn-group shadow-sm rounded-pill bg-white border p-1">
                                        <button class="btn btn-link text-navy p-2" title="Detalles" onclick="loadView('@Url.Action("Details", "Riesgos", new { id = item.IdRiesgo })')">
                                            <i class="fas fa-eye"></i>
                                        </button>

                                        @if (!item.Tratado.GetValueOrDefault())
                                        {
                                            <button class="btn btn-link text-warning p-2" title="Tratar Riesgo" onclick="loadView('@Url.Action("Gestionar", "Tratamientos", new { idRiesgo = item.IdRiesgo })')">
                                                <i class="fas fa-hammer"></i>
                                            </button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-link text-success p-2" title="Ver Tratamiento" onclick="loadView('@Url.Action("Index", "Tratamientos", new { highlightId = item.IdRiesgo })')">
                                                <i class="fas fa-clipboard-check"></i>
                                            </button>
                                        }

                                        <button class="btn btn-link text-dark p-2" title="Eliminar Análisis" onclick="confirmarEliminarRiesgo(@item.IdRiesgo, '@item.Amenaza')">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="modalEliminarRiesgo" data-bs-backdrop="static" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4">
            <div class="modal-header bg-danger text-white rounded-top-4 border-0">
                <h5 class="modal-title fw-bold"><i class="fas fa-exclamation-triangle me-2"></i>Eliminar Análisis de Riesgo</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <div class="alert alert-warning border-0 small mb-4">
                    <i class="fas fa-info-circle me-2"></i> <strong>Atención:</strong> Al eliminar este análisis, también se borrarán permanentemente todos los planes de tratamiento y bitácoras asociados.
                </div>
                <p class="text-center mb-4">Confirmar eliminación de la amenaza: <br><strong id="nombreRiesgoEliminar" class="text-navy fs-5"></strong></p>
                <div class="mb-3">
                    <label class="form-label small fw-bold text-muted text-uppercase">Contraseña del Auditor</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-0"><i class="fas fa-lock"></i></span>
                        <input type="password" id="passAuditorRiesgo" class="form-control border-light bg-light" placeholder="Ingrese su contraseña">
                    </div>
                </div>
                <input type="hidden" id="idRiesgoEliminar" />
            </div>
            <div class="modal-footer border-0 p-3">
                <button type="button" class="btn btn-light rounded-pill px-4" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-danger rounded-pill px-4 shadow-sm" onclick="ejecutarEliminacionRiesgo()">Confirmar y Borrar</button>
            </div>
        </div>
    </div>
</div>



<script>
    function confirmarEliminarRiesgo(id, nombre) {
        $('#idRiesgoEliminar').val(id);
        $('#nombreRiesgoEliminar').text(nombre);
        $('#passAuditorRiesgo').val('');
        var modal = new bootstrap.Modal(document.getElementById('modalEliminarRiesgo'));
        modal.show();
    }

    function ejecutarEliminacionRiesgo() {
        const id = $('#idRiesgoEliminar').val();
        const pass = $('#passAuditorRiesgo').val();

        if (!pass) {
            alert("Debe ingresar su contraseña para autorizar la eliminación.");
            return;
        }

        $.ajax({
            url: '@Url.Action("EliminarRiesgoConfirmed", "Riesgos")',
            type: 'POST',
            data: { id: id, password: pass },
            success: function (res) {
                if (res.success) {
                    bootstrap.Modal.getInstance(document.getElementById('modalEliminarRiesgo')).hide();
                    loadView('@Url.Action("Index", "Riesgos")');
                } else {
                    alert(res.message);
                }
            },
            error: function () {
                alert("Error de conexión con el servidor.");
            }
        });
    }
</script>

<style>
    .text-navy {
        color: #0b1e3b;
    }

    .btn-navy {
        background-color: #0b1e3b;
        color: white;
        border: none;
    }

        .btn-navy:hover {
            background-color: #d62828;
            color: white;
        }

    .btn-link:hover {
        transform: scale(1.2);
        transition: 0.2s;
    }

    .animate-pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }

        100% {
            opacity: 1;
        }
    }
</style>