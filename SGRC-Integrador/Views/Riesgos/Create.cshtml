@model SGRC_Integrador.Models.Riesgo

<div class="container fade-in">
    <h3 class="fw-bold mb-4">Evaluar Riesgo</h3>
    <form id="formRiesgo" action="@Url.Action("Create", "Riesgos")" method="post">

        <div class="form-group-modern mb-3">
            <label class="form-label-modern">Activo a Evaluar</label>
            @Html.DropDownList("IdActivo", (SelectList)ViewBag.IdActivo, "Seleccione un activo...", new { @class = "form-select-modern", @required = "required" })
        </div>

        <div class="form-group-modern mb-3">
            <label class="form-label-modern">Amenaza Detectada</label>
            <input type="text" name="Amenaza" class="form-input-modern" required placeholder="Ej: Ransomware">
        </div>

        <div class="row">
            <div class="col-md-6">
                <label>Probabilidad (1-4)</label>
                <input type="range" name="Probabilidad" class="form-range" min="1" max="4" value="1">
            </div>
            <div class="col-md-6">
                <label>Impacto (1-4)</label>
                <input type="range" name="Impacto" class="form-range" min="1" max="4" value="1">
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-danger btn-lg">Guardar Evaluación</button>
        </div>
    </form>
</div>

<script>
    $('#formRiesgo').submit(function (e) {
        e.preventDefault();
        $.post($(this).attr('action'), $(this).serialize(), function (response) {
            $('#main-content').html(response);
        });
    });
</script>